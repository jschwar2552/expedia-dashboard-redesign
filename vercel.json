{
  "version": 2,
  "name": "expedia-strategic-advisory-platform",
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "/ws",
      "dest": "server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "mockups/02-chat-interface.html"
    }
  ],
  "env": {
    "ANTHROPIC_API_KEY": "@anthropic_api_key",
    "NODE_ENV": "production"
  },
  "functions": {
    "server/index.js": {
      "maxDuration": 30
    }
  }
}